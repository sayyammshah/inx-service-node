{
  "name": "inx-backend",
  "version": "1.0.0",
  "license": "MIT",
  "_moduleAliases": {
    "@database": "dist/database/index.js",
    "@controllers": "dist/controllers/index.js",
    "@schema": "dist/schema/index.js",
    "@models": "dist/models/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "if [ -d dist ]; then rm -r dist; fi && tsc",
    "start": "node -r module-alias/register dist/server.js",
    "cleanup": "if [ -d dist ]; then rm -r dist; fi && if [ -d node_modules ]; then rm -r node_modules; fi && if [ -d logs ]; then rm -r logs; fi && if [ -d coverage ]; then rm -r coverage; fi",
    "lint": "eslint \"{src, apps, lib}/**/*.ts\" ",
    "lint:fix": "eslint \"{src, apps, lib}/**/*.ts\" --fix",
    "precommit": "lint-staged",
    "test": "jest",
    "jest:coverage": "jest --coverage",
    "ci": "pnpm lint && pnpm test && pnpm build && pnpm start"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix",
    "*.json": "prettier --write"
  },
  "main": "src/server.ts",
  "author": "Sayyam",
  "dependencies": {
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongodb": "^6.10.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/module-alias": "^2.0.4",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.9.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
